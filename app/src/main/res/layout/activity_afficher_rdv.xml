<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".activities.afficher.AfficherRdvActivity"
    >

    <!-- 1 | MainActivity RootView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <include layout="@layout/toolbar"/>

        <include layout="@layout/progress_bar"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipContact"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAnalyse"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyse"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipExamen"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen"
                    app:chipIcon="@android:drawable/checkbox_on_background" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/listRdv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/selectRdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="@string/select"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSave"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="10dip"
                app:fabSize="mini"
                app:srcCompat="@drawable/outline_save_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCancel"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="10dip"
                app:fabSize="mini"
                app:srcCompat="@drawable/outline_replay_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabEdit"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="10dip"
                app:fabSize="mini"
                app:srcCompat="@drawable/outline_create_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabDelete"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="10dip"
                app:fabSize="mini"
                app:srcCompat="@drawable/outline_delete_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPhoto"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="10dip"
                app:fabSize="mini"
                app:srcCompat="@drawable/outline_add_a_photo_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTypeRdv"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Type Rdv"
            app:errorEnabled="true"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textTypeRdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/text_date"
            app:errorEnabled="true"
            android:paddingLeft="80dip"
            android:paddingRight="80dip"
            app:startIconDrawable="@drawable/outline_event_black_24dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:onClick="showDatePicker"
                android:focusableInTouchMode="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutHeure"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/text_heure"
            app:errorEnabled="true"
            android:paddingLeft="80dip"
            android:paddingRight="80dip"
            app:startIconDrawable="@drawable/outline_schedule_black_18dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textHeure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:onClick="showTimePicker"
                android:focusableInTouchMode="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNote"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/text_note"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            app:startIconDrawable="@drawable/outline_format_align_center_black_24dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"

            app:srcCompat="@drawable/outline_add_black_24dp"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@android:color/white"
            />

    </LinearLayout>

    <include layout="@layout/bottom_navigation"/>

</androidx.drawerlayout.widget.DrawerLayout>